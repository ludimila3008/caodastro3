<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tecnomaniacos.caodastro">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity1"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter tools:ignore="GoogleAppIndexingWarning">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="com.tecnomaniacos.caodastro.MainActivity1" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity2"
            android:label="@string/title_activity_activity2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activityentrar"
            android:label="@string/title_activity_activityentrar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".perfildaOng"
            android:label="@string/title_activity_perfilda_ong"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".formularioOng"
            android:label="@string/title_activity_formulario_ong"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".formularioPais"
            android:label="@string/title_activity_formulario_pais"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".perfildospais"
            android:label="@string/title_activity_perfildospais"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>