<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_perfildospais"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tecnomaniacos.caodastro.perfildospais"
    tools:showIn="@layout/activity_perfildospais"
    android:background="@color/white">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">


    </android.support.design.widget.AppBarLayout>


    <TextView
        tools:text="91111-1111"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewnumerotelefone"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_alignBaseline="@+id/textViewtelefone"
        android:layout_alignBottom="@+id/textViewtelefone"
        android:layout_toRightOf="@+id/textViewtelefone"
        android:layout_toEndOf="@+id/textViewtelefone"
        android:fontFamily="sans-serif-condensed"
        />

    <TextView
        tools:text="CEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtelefone"
        android:layout_alignLeft="@+id/textViewtelefone"
        android:layout_alignStart="@+id/textViewtelefone"
        android:layout_marginTop="25dp"
        android:id="@+id/textViewcep"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        tools:text="11.111-111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewcep"
        android:layout_alignLeft="@+id/textViewnumerotelefone"
        android:layout_alignStart="@+id/textViewnumerotelefone"
        android:id="@+id/textViewnumerocep"
        android:fontFamily="sans-serif-condensed"/>

    <Button
        tools:text="Cadastre já seu filho!"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/buttoncadastrocrianças"
        tools:style="@android:style/Widget.Button"
        android:textSize="12sp"
        tools:backgroundTint="@android:color/holo_red_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="casual"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarperfilpais"
        android:layout_width="400dp"
        android:layout_height="288dp"
        android:background="@android:color/holo_red_light"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        tools:ignore="ContentDescription"
        android:layout_height="80dp"
        android:background="@drawable/iconeusuarionovo"
        android:id="@+id/imageView4"
        android:layout_above="@+id/textViewtelefone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="Maria"
        android:textColor="@color/white"
        android:id="@+id/textViewnome"
        tools:fontFamily="sans-serif"
        tools:textSize="20sp"
        android:layout_above="@+id/textViewtelefone"
        android:layout_toRightOf="@+id/textViewtelefone"
        android:layout_toEndOf="@+id/textViewtelefone" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="58dp"
        android:id="@+id/textViewtelefone"
        tools:text="Telefone:"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:layout_below="@+id/toolbarperfilpais"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="50dp"
        tools:ignore="ContentDescription"
        android:layout_height="50dp"
        android:background="@drawable/Autismo"
        android:id="@+id/imageViewautismo"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttoncadastrocrianças"
        android:layout_toStartOf="@+id/buttoncadastrocrianças" />

</RelativeLayout>
