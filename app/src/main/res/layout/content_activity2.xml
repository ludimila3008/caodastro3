<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activity2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tecnomaniacos.caodastro.activity2"
    android:background="@color/white">

    <Button
        android:text="@string/Buttoncrianças"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/button4"
        tools:style="@android:style/Widget.Button"
        tools:backgroundTint="@color/colorPrimary"
        tools:text="Pai/responsável por uma criança autista"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="204dp"
        android:fontFamily="casual" />

    <Button
        android:text="@string/Buttoncaes"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/button3"
        tools:style="@android:style/Widget.Button"
        tools:backgroundTint="@color/colorPrimaryDark"
        tools:text="ONG's que abrigam cães abandonados"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="204dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        tools:fontFamily="casual" />


    <ImageView
        android:id="@+id/imagemcrianca"
        android:layout_width="130dp"
        android:contentDescription="@null"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/crianca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="350dp"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:background="@drawable/cao"
        android:layout_alignTop="@+id/imagemcrianca"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:id="@+id/imageView3" />
</RelativeLayout>
